<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/item_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:minWidth="@dimen/category_item_min_width"
    android:layout_height="@dimen/category_item_height"
    android:padding="@dimen/category_item_margin"
    android:background="@drawable/shape_module_item"
    android:layout_margin="@dimen/category_item_margin">

    <TextView
        android:id="@+id/module_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>